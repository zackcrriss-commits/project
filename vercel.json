{
  "version": 2,
  "builds": [
    {
      "src": "package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "dist"
      }
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/api/$1"
    },
    {
      "src": "/(.*)",
      "dest": "/$1"
    }
  ],
  "env": {
    "GMAIL_USER": "@GMAIL_USER",
    "GMAIL_APP_PASSWORD": "@GMAIL_APP_PASSWORD",
    "RECIPIENT_EMAIL": "@RECIPIENT_EMAIL"
  }
}
